{
  // Tasks: Build and Run for PetSim. Keep explicit tasks to avoid auto-generated C/C++ Compile Run entries that lack a `command`.
  // If the C/C++ extension suggests an auto-generated task, either add a `dependsOn` to `Build petsim` or remove the auto task entry.
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build PetSim",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-Wextra",
        "-g3",
        "main.cpp",
        "Environment.cpp",
        "Pet.cpp",
        "EcosystemManager.cpp",
        "-o",
        "petsim"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run PetSim",
      "type": "shell",
      "command": "${workspaceFolder}/petsim",
      "dependsOn": "Build PetSim",
      "problemMatcher": []
    }
  ]
}
